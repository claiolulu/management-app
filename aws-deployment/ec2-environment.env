# EC2 Production Environment Variables
# File: /home/figma-app/.env
# Make sure to replace all placeholder values with your actual values

# ============================================
# SERVER CONFIGURATION
# ============================================
SERVER_PORT=8080
SERVER_CONTEXT_PATH=/api
APP_NAME=figma-web-app-backend

# ============================================
# DATABASE CONFIGURATION
# ============================================
DB_HOST=your-rds-endpoint.us-east-1.rds.amazonaws.com
DB_PORT=3306
DB_NAME=figma_app
DB_USERNAME=admin
DB_PASSWORD=YourSecureDBPassword123!
DB_USE_SSL=true
DB_TIMEZONE=UTC

# ============================================
# JPA/HIBERNATE CONFIGURATION
# ============================================
JPA_DDL_AUTO=update
JPA_SHOW_SQL=false
JPA_FORMAT_SQL=false
SQL_INIT_MODE=never

# ============================================
# JWT CONFIGURATION
# ============================================
# Generate a secure 64+ character secret key
JWT_SECRET=your_super_secure_jwt_secret_key_that_should_be_at_least_64_characters_long_and_random
JWT_EXPIRATION_MS=86400000

# ============================================
# ADMIN CONFIGURATION
# ============================================
ADMIN_USERNAME=admin
ADMIN_PASSWORD=YourSecureAdminPassword123!

# ============================================
# FILE UPLOAD CONFIGURATION
# ============================================
UPLOAD_PATH=/var/uploads/profiles
FILE_UPLOAD_DIR=/var/uploads/profiles/
MULTIPART_MAX_FILE_SIZE=10MB
MULTIPART_MAX_REQUEST_SIZE=10MB

# ============================================
# FRONTEND CONFIGURATION
# ============================================
FRONTEND_URL=https://your-domain.com

# ============================================
# EMAIL CONFIGURATION (Gmail SMTP)
# ============================================
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=svlhrmvrgbirwegl

# ============================================
# AWS/DOMAIN CONFIGURATION
# ============================================
# Your actual domain name
DOMAIN_NAME=your-domain.com
API_DOMAIN=api.your-domain.com

# ============================================
# LOGGING CONFIGURATION
# ============================================
LOG_PATH=/var/log/figma-app
LOG_LEVEL=INFO

# ============================================
# SECURITY CONFIGURATION
# ============================================
# Enable HTTPS only in production
HTTPS_ONLY=true
SECURE_COOKIES=true
