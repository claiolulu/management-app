# ===========================================
# FIGMA WEB APP - FRONTEND ENVIRONMENT VARIABLES
# ===========================================
# Copy this file to .env.local for local development
# For production, values are injected during GitHub Actions deployment

# ===========================================
# API CONFIGURATION
# ===========================================
# Backend API URL - adjust based on your environment
# Development: http://localhost:5001/api
# Production: https://your-api-domain.com/api or https://your-ec2-ip/api
VITE_API_URL=http://localhost:5001/api

# ===========================================
# ENVIRONMENT SETTINGS
# ===========================================
# Current environment (development, production, test)
VITE_ENVIRONMENT=development

# ===========================================
# FEATURE FLAGS
# ===========================================
# Enable/disable features based on environment
VITE_ENABLE_DEBUG=true
VITE_ENABLE_ANALYTICS=false
VITE_USE_MOCK_DATA=false

# ===========================================
# API CONFIGURATION
# ===========================================
# API request timeout in milliseconds
VITE_API_TIMEOUT=10000

# Mock API delay for development (if using mock data)
VITE_MOCK_DELAY=1000

# ===========================================
# DEVELOPMENT SERVER (Vite)
# ===========================================
# These settings are used by Vite dev server
VITE_DEV_SERVER_HOST=localhost
VITE_DEV_SERVER_PORT=5173

# ===========================================
# BUILD CONFIGURATION
# ===========================================
# Production build optimization settings
VITE_CHUNK_SIZE_WARNING_LIMIT=1000

# ===========================================
# ENVIRONMENT-SPECIFIC EXAMPLES
# ===========================================

# DEVELOPMENT (.env.local or .env.development):
# VITE_API_URL=http://localhost:5001/api
# VITE_ENVIRONMENT=development
# VITE_ENABLE_DEBUG=true
# VITE_ENABLE_ANALYTICS=false

# PRODUCTION (set during CI/CD deployment):
# VITE_API_URL=https://your-production-api.com/api
# VITE_ENVIRONMENT=production
# VITE_ENABLE_DEBUG=false
# VITE_ENABLE_ANALYTICS=true

# STAGING (if you have a staging environment):
# VITE_API_URL=https://staging-api.your-domain.com/api
# VITE_ENVIRONMENT=staging
# VITE_ENABLE_DEBUG=true
# VITE_ENABLE_ANALYTICS=false

# ===========================================
# NOTES
# ===========================================
# 1. Variables must start with VITE_ to be accessible in the frontend
# 2. Never commit .env.local or other .env files with actual values
# 3. Production values are injected by GitHub Actions during deployment
# 4. For local development, copy this file to .env.local and customize
