# ===========================================
# DEVELOPMENT ENVIRONMENT CONFIGURATION
# ===========================================
# This file should be copied to .env for local development

# Environment Profile
SPRING_PROFILES_ACTIVE=dev

# Server Configuration
SERVER_PORT=5001
SERVER_CONTEXT_PATH=/api
APP_NAME=figma-web-app-backend

# Database Configuration (Local Development)
DB_HOST=localhost
DB_PORT=3306
DB_NAME=figma_app_dev
DB_USERNAME=root
DB_PASSWORD=root
DB_USE_SSL=false
DB_TIMEZONE=UTC

# JPA Configuration (Development)
JPA_DDL_AUTO=create-drop
JPA_SHOW_SQL=true
JPA_FORMAT_SQL=true
SQL_INIT_MODE=always

# Security Configuration (Development)
JWT_SECRET=dev-jwt-secret-key-change-in-production-minimum-64-chars-long
JWT_EXPIRATION_MS=86400000
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123

# Email Configuration (Development - Console output)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_SMTP_AUTH=true
MAIL_SMTP_STARTTLS=true
EMAIL_RESET_TOKEN_EXPIRY=30

# CORS Configuration (Development)
CORS_ORIGIN_LOCALHOST_3000=http://localhost:3000
CORS_ORIGIN_LOCALHOST_5173=http://localhost:5173
CORS_ORIGIN_DEV=http://localhost:3001
CORS_ALLOW_CREDENTIALS=true

# Frontend Configuration (Development)
FRONTEND_URL=http://localhost:3000

# File Upload Configuration (Development)
FILE_UPLOAD_DIR=uploads/profiles/
UPLOAD_PATH=uploads/profiles
MULTIPART_MAX_FILE_SIZE=10MB
MULTIPART_MAX_REQUEST_SIZE=10MB

# Logging Configuration (Development - Verbose)
LOG_LEVEL_APP=DEBUG
LOG_LEVEL_SECURITY=DEBUG
LOG_LEVEL_WEB=DEBUG
LOG_LEVEL_TRANSACTION=DEBUG
LOG_LEVEL_SQL=DEBUG
LOG_LEVEL_ROOT=INFO
LOG_FILE=logs/figma-app-dev.log
LOG_PATTERN_CONSOLE=%d{yyyy-MM-dd HH:mm:ss} - %msg%n
LOG_PATTERN_FILE=%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n

# Management Endpoints (Development - All enabled)
MANAGEMENT_ENDPOINTS=*
MANAGEMENT_HEALTH_DETAILS=always
