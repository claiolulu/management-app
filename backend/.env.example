# ===========================================
# FIGMA WEB APP - ENVIRONMENT CONFIGURATION
# ===========================================
# Copy this file to .env and customize values for your environment
# All values have sensible defaults for local development

# ===========================================
# SERVER CONFIGURATION
# ===========================================
SERVER_PORT=5001
SERVER_CONTEXT_PATH=/api
APP_NAME=figma-web-app-backend

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
DB_HOST=localhost
DB_PORT=3306
DB_NAME=figma_app
DB_USERNAME=root
DB_PASSWORD=your_secure_password_here
DB_USE_SSL=false
DB_TIMEZONE=UTC

# ===========================================
# JPA/HIBERNATE CONFIGURATION
# ===========================================
JPA_DDL_AUTO=update
JPA_SHOW_SQL=false
JPA_FORMAT_SQL=true

# ===========================================
# SQL INITIALIZATION
# ===========================================
SQL_INIT_MODE=never

# ===========================================
# FILE UPLOAD CONFIGURATION
# ===========================================
MULTIPART_MAX_FILE_SIZE=10MB
MULTIPART_MAX_REQUEST_SIZE=10MB
FILE_UPLOAD_DIR=uploads/profiles/
UPLOAD_PATH=uploads/profiles

# ===========================================
# SECURITY & AUTHENTICATION
# ===========================================
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your_admin_password_here
JWT_SECRET=your_jwt_secret_key_minimum_64_characters_long_for_security
JWT_EXPIRATION_MS=86400000

# ===========================================
# EMAIL CONFIGURATION
# ===========================================
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_email_app_password
MAIL_SMTP_AUTH=true
MAIL_SMTP_STARTTLS=true

# Email functionality settings
EMAIL_RESET_TOKEN_EXPIRY=30

# ===========================================
# FRONTEND CONFIGURATION
# ===========================================
FRONTEND_URL=http://localhost:3000

# ===========================================
# CORS CONFIGURATION
# ===========================================
CORS_ORIGIN_LOCALHOST_3000=http://localhost:3000
CORS_ORIGIN_LOCALHOST_3001=http://localhost:3001
CORS_ORIGIN_LOCALHOST_5173=http://localhost:5173
CORS_ORIGIN_EC2_HTTP=
CORS_ORIGIN_EC2_HTTPS=
CORS_ORIGIN_PROD=https://your-production-domain.com
CORS_ALLOW_CREDENTIALS=true

# ===========================================
# LOGGING CONFIGURATION
# ===========================================
LOG_LEVEL_APP=DEBUG
LOG_LEVEL_SECURITY=DEBUG
LOG_LEVEL_WEB=DEBUG
LOG_PATTERN_CONSOLE=%d{yyyy-MM-dd HH:mm:ss} - %msg%n
LOG_PATTERN_FILE=%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n
LOG_FILE=logs/figma-app.log

# ===========================================
# MANAGEMENT & MONITORING
# ===========================================
MANAGEMENT_ENDPOINTS=health,info,metrics
MANAGEMENT_HEALTH_DETAILS=always

# ===========================================
# ENVIRONMENT-SPECIFIC OVERRIDES
# ===========================================
# Set SPRING_PROFILES_ACTIVE to one of: dev, prod, test
SPRING_PROFILES_ACTIVE=dev

# ===========================================
# DEPLOYMENT CONFIGURATION (PRODUCTION ONLY)
# ===========================================
# Uncomment and configure for production deployment
# DB_HOST=your-rds-endpoint.region.rds.amazonaws.com
# DB_USE_SSL=true
# FRONTEND_URL=https://your-production-domain.com
# LOG_LEVEL_APP=INFO
# LOG_LEVEL_SECURITY=WARN
# LOG_LEVEL_WEB=WARN
# JPA_SHOW_SQL=false
