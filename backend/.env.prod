# ===========================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# ===========================================

# Frontend URL
FRONTEND_URL=https://gcgcm-fe.s3.eu-north-1.amazonaws.com

# Database Configuration (Replace with actual production values)
DB_HOST=your-rds-endpoint.region.rds.amazonaws.com
DB_PORT=3306
DB_NAME=figma_app
DB_USERNAME=admin
DB_PASSWORD=your_production_password
DB_USE_SSL=true

# JWT Configuration  
JWT_SECRET=your_production_jwt_secret_64_characters_minimum

# Admin Configuration
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your_production_admin_password

# File Upload Configuration
UPLOAD_PATH=/var/uploads/profiles

# Email Configuration (Production email settings)
MAIL_USERNAME=your_production_email@domain.com
MAIL_PASSWORD=your_production_email_password
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587

# Logging (less verbose for production)
LOG_LEVEL_APP=INFO
LOG_LEVEL_SECURITY=WARN
LOG_LEVEL_WEB=WARN

# JPA Settings (production optimized)
JPA_SHOW_SQL=false
JPA_DDL_AUTO=update
JPA_FORMAT_SQL=false
SQL_INIT_MODE=never

# Spring Profile
SPRING_PROFILES_ACTIVE=prod
