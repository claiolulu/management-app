# ===========================================
# PRODUCTION ENVIRONMENT VARIABLES
# ===========================================
# These variables are used by application-prod.yml  
# This file contains production-specific overrides
# These are typically set by GitHub Actions deployment

# Production Profile Confirmation
SPRING_PROFILES_ACTIVE=prod

# Database Configuration (set by deployment)
DB_HOST=${DB_HOST}
DB_PORT=${DB_PORT:-3306}
DB_NAME=${DB_NAME}
DB_USERNAME=${DB_USERNAME}
DB_PASSWORD=${DB_PASSWORD}

# Security Configuration (set by deployment)
JWT_SECRET=${JWT_SECRET}
ADMIN_USERNAME=${ADMIN_USERNAME:-admin}
ADMIN_PASSWORD=${ADMIN_PASSWORD}

# Email Configuration (set by deployment)
MAIL_HOST=${MAIL_HOST}
MAIL_PORT=${MAIL_PORT:-587}
MAIL_USERNAME=${MAIL_USERNAME}
MAIL_PASSWORD=${MAIL_PASSWORD}

# Frontend Configuration (set by deployment)
FRONTEND_URL=${FRONTEND_URL}
CORS_ORIGIN_PROD=${CORS_ORIGIN_PROD}
CORS_ORIGIN_EC2_HTTPS=${CORS_ORIGIN_EC2_HTTPS}
CORS_ORIGIN_S3=${CORS_ORIGIN_S3}

# Server Configuration (set by deployment)
SERVER_PORT=${SERVER_PORT:-5001}
